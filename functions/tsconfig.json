{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "baseUrl": "./", // Necesario para que funcione el alias
    "isolatedModules": true,
    "paths": {
      "@/*": ["src/*"] // Configuraci√≥n del alias
    }
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}